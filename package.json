{
  "name": "@patomation/create-react-app",
  "version": "1.0.1",
  "description": "A simple react app template that is already ejected with webpack and no crap",
  "private": false,
  "main": "./scripts/create-react-app.js",
  "scripts": {
    "start": "webpack-dev-server --mode development --open --hot --config ./config/webpack.config.js",
    "build": "webpack --mode production --config ./config/webpack.config.js",
    "lint": "./node_modules/.bin/eslint **/*.{js,ts,tsx}",
    "test": "jest --config ./config/jest.config.js",
    "coverage": "npm run test -- --coverage",
    "create-react-app": "node ./scripts/create-react-app.js"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS --config ./config/commitlint.config.js",
      "pre-commit": "npm run lint && npm run test"
    }
  },
  "dependencies": {
    "@patomation/ui": "^2.0.0-beta18",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "@babel/core": "7.10.3",
    "@babel/preset-env": "7.10.3",
    "@babel/preset-react": "7.10.1",
    "@commitlint/cli": "9.0.1",
    "@commitlint/config-conventional": "9.0.1",
    "@types/jest": "26.0.3",
    "@types/react": "16.9.41",
    "@types/webpack-env": "1.15.2",
    "@typescript-eslint/eslint-plugin": "3.4.0",
    "@typescript-eslint/parser": "3.4.0",
    "babel-loader": "8.1.0",
    "css-loader": "3.6.0",
    "enzyme": "3.11.0",
    "enzyme-adapter-react-16": "1.15.2",
    "eslint": "7.3.1",
    "eslint-config-standard": "14.1.1",
    "eslint-plugin-import": "2.22.0",
    "eslint-plugin-jest": "23.17.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-react": "7.20.1",
    "eslint-plugin-standard": "4.0.1",
    "file-loader": "6.0.0",
    "html-webpack-plugin": "4.3.0",
    "husky": "4.2.5",
    "jest": "26.1.0",
    "jsdom-global": "3.0.2",
    "node-sass": "4.14.1",
    "sass-loader": "8.0.2",
    "style-loader": "1.2.1",
    "ts-jest": "26.1.1",
    "ts-loader": "7.0.5",
    "typescript": "3.9.5",
    "url-loader": "4.1.0",
    "webpack": "4.43.0",
    "webpack-cli": "3.3.12",
    "webpack-dev-server": "3.11.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/patomation/react-webpack-boilerplate.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/patomation/react-webpack-boilerplate/issues"
  },
  "homepage": "https://github.com/patomation/react-webpack-boilerplate#readme"
}
