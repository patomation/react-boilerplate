{
  "extends": "tsconfigs/browser-executable",
  "compilerOptions": {
    "target": "es6", 
    "module": "commonjs",
    "jsx": "react",
    "strict": false,
    "noImplicitAny": false,
    "declaration": false,
    "outDir": "dist",
    "sourceMap": true,
    "types": ["jest"],
    "experimentalDecorators": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}